{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "windows": {
                "command": "${workspaceRoot}\\compiler\\pawncc.exe",
                "args": [
                    "'${workspaceRoot}\\gamemodes\\GM.pwn'",
                    "'-D${workspaceRoot}\\gamemodes'",
                    "'-i${workspaceRoot}\\includes'",
                    "'-;+'",
                    "'-(+'",
                    "'-d3'"
                ],
            },
            "linux": {
                "command": "${workspaceRoot}/compiler/pawncc",
                "args": [
                    "'${workspaceRoot}/gamemodes/GM.pwn'",
                    "'-D${workspaceRoot}/gamemodes'",
                    "'-i${workspaceRoot}/includes'",
                    "'-;+'",
                    "'-(+'",
                    "'-d3'"
                ],
            },
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$pawncc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}